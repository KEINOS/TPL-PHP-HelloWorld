{
    "name": "keinos/hello-world-tpl",
    "description": "Overly cautious HelloWorld class. See the repo for details.",
    "homepage": "https://github.com/KEINOS/TPL-PHP-HelloWorld",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "KEINOS",
            "email": "github@keinos.com",
            "homepage": "https://github.com/KEINOS/",
            "role": "Maintainer"
        },
        {
            "name": "tadsan",
            "homepage": "https://qiita.com/tadsan/items/bf61520eb2d455e0e8b4",
            "role": "InfluencedBy"
        },
        {
            "name": "contributors",
            "homepage": "https://github.com/KEINOS/TPL-PHP-HelloWorld/graphs/contributors",
            "role": "Contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/KEINOS/Dockerfile_of_Alpine/issues",
        "source": "https://github.com/KEINOS/TPL-PHP-HelloWorld"
    },
    "bin": ["bin/HelloWorld"],
    "require": {
        "php": "^8.0 || ^7.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "phan/phan": "^2.5",
        "php-coveralls/php-coveralls": "^2.2",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.10",
        "phpunit/phpunit": "^9.0 || ^8.0 || ^7.0 || ^6.5",
        "psalm/phar": "^3.9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "target-directory": "tools"
        }
    },
    "autoload": {
        "psr-4": {
            "KEINOS\\HelloWorld\\": "src/classes"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KEINOS\\Tests\\": "tests"
        }
    },
    "scripts" :{
        "test": [
            "./tests/run-tests.sh"
        ],
        "build": [
            "box compile --config=./.init/box.json"
        ],
        "dev": [
            "docker-compose run --rm --workdir='/app' -v $(pwd):/app dev"
        ]
    }
}
